    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="249dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="296dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>